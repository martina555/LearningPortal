@model IEnumerable<LearningPortal.Models.CourseUser>

@{
    ViewData["Title"] = "My Courses";
    ViewData.AddActivePage(ManageNavPages.MyCourses);
}
@{
    ViewData["Title"] = "MyCourses";
}


<h4>My Courses</h4>

<table class="table">
    <thead>
        <tr>
            <th>
                Course
            </th>
            <th>
                Lessons
            </th>
            <th>
                Attempts
            </th>
            <th>
                Last test result
            </th>
            <th>
                Finished
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kurzy in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Courses" asp-action="Details" asp-route-id="@kurzy.CourseId">@Html.DisplayFor(modelItem => kurzy.Course.Name)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => kurzy.NumberOfFinishedLessons)/@Html.DisplayFor(modelItem => kurzy.Course.NumberOfLessons)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => kurzy.NumberOfTests)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => kurzy.ResultPercent) %
                </td>
                <td>
                    @Html.DisplayFor(modelItem => kurzy.Finished)
                </td>
            </tr>
        }
    </tbody>
</table>


